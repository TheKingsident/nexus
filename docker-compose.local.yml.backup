version: '3.8'

services:
  db:
    image: postgres:14
    environment:
      POSTGRES_DB: nexus_db
      POSTGRES_USER: nexus_user
      POSTGRES_PASSWORD: nexus_password
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data/

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"

  web:
    build: .
    ports:
      - "8000:8000"
    environment:
      - DEBUG=True
      - SECRET_KEY=local-dev-secret-key
      - DB_NAME=nexus_db
      - DB_USER=nexus_user
      - DB_PASSWORD=nexus_password
      - DB_HOST=db
      - DB_PORT=5432
      - REDIS_URL=redis://redis:6379/1
      - CELERY_BROKER_URL=redis://redis:6379/0
      - TMDB_API_KEY=${TMDB_API_KEY}
      - TMDB_BASE_URL=https://api.themoviedb.org/3
      - ALLOWED_HOSTS=localhost,127.0.0.1
    depends_on:
      - db
      - redis
    volumes:
      - .:/app

  worker:
    build: .
    command: celery -A nexus worker --loglevel=info
    environment:
      - DEBUG=True
      - SECRET_KEY=local-dev-secret-key
      - DB_NAME=nexus_db
      - DB_USER=nexus_user
      - DB_PASSWORD=nexus_password
      - DB_HOST=db
      - DB_PORT=5432
      - REDIS_URL=redis://redis:6379/1
      - CELERY_BROKER_URL=redis://redis:6379/0
      - TMDB_API_KEY=${TMDB_API_KEY}
    depends_on:
      - db
      - redis
    volumes:
      - .:/app

volumes:
  postgres_data: